.btn1 {
  width: 90% !important;
  margin-bottom: 10px;
}
.p1 {
  margin-top: 10px;
  text-align: center;
  font-size: 14px;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #333333;
  display: flex;
  justify-content: center;
}
.blue {
  color: #0d90ff;
}
/* header */
.header {
  height: 80rpx;
  display: flex;
  background: #fff;
  border-top: 1px solid #e5e5e5;
}
.header .left-bar {
  flex: 1;
  display: flex;
  align-items: center;
}
.header .left-bar .img {
  width: 40rpx;
  height: 40rpx;
  margin: 0 15rpx;
}
.header .right-bar {
  width: 170rpx;
  border-left: 1px solid #e5e5e5;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.header .right-bar .icon01 {
  width: 40rpx;
  height: 40rpx;
}
.header .right-bar .icon02 {
  width: 40rpx;
  height: 40rpx;
}
/* header */
.weChat-icon {
  width: 38rpx;
  height: 34rpx;
  margin-right: 20rpx;
}
.btn2 {
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn-hide {
  position: absolute;
  z-index: 111;
  left: 50%;
  transform: translateX(-50%);
}
