.login-btn {
  display: block;
  width: 90% !important;
  height: 38px;
  background: #0d90ff;
  border-radius: 48px;
  color: #fff;
  font-weight: 400;
}
.phone-btn {
  background: #fff;
  color: #333333;
  border: 1px solid #a6a6a6;
  display: flex;
  align-items: center;
  justify-content: center;
}
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #f6f7f8;
}
.logo-box {
  height: 55%;
  display: flex;
  align-items: center;
  justify-content: center;
}

